---
interface Props {
  url: string;
  title: string;
}

const { url, title } = Astro.props;

// Codifica la URL y el texto para que sean seguros en los enlaces.
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);

// URLs para compartir en cada plataforma
const shareXUrl = `https://twitter.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`;
const shareFacebookUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`;
---

<div class="flex items-center gap-4 my-2">
  <span class="text-gray-600">Comparte este art√≠culo:</span>

  <a
    href={shareXUrl}
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Compartir en X"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="currentColor"><path fill="#000000" d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584l-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932ZM17.61 20.644h2.039L6.486 3.24H4.298Z"/></svg>
  </a>

  <a
    href={shareFacebookUrl}
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Compartir en Facebook"
  >
   <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 20 20" fill="currentColor"><path fill="#000000" fill-rule="evenodd" d="M18.896 0H1.104C.494 0 0 .494 0 1.104v17.792C0 19.506.494 20 1.104 20h9.578v-7.745H8.076V9.237h2.606V7.01c0-2.584 1.578-3.99 3.883-3.99c1.104 0 2.052.082 2.329.119v2.7h-1.598c-1.254 0-1.496.596-1.496 1.47v1.927h2.989l-.39 3.018h-2.6V20h5.097c.61 0 1.104-.494 1.104-1.104V1.104C20 .494 19.506 0 18.896 0Z"/></svg>
  </a>
</div>